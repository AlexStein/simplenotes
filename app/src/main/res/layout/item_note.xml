<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    tools:backgroundTint="@color/cardview_dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/textview_margin"
            android:layout_marginTop="@dimen/textview_margin"
            android:layout_marginEnd="@dimen/textview_margin"
            android:textSize="@dimen/note_title_text_size"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/noteBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/textview_margin"
            android:textSize="@dimen/note_body_text_size"
            style="@style/TextAppearance.AppCompat"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>